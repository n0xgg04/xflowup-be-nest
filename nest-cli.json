{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "mail/template/**/*", "outDir": "dist/src/mail" },
      { "include": "public/**/*", "outDir": "dist/public" }
    ],
    "watchAssets": true
  }
}
